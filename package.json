{
  "name": "tripsmith",
  "version": "0.0.1",
  "private": true,
  "description": "TripSmith é um planejador inteligente de viagens que integra múltiplas APIs (Google Maps, Google Places, Skyscanner, Booking, OpenAI) para gerar roteiros personalizados de curta, média ou longa duração.",
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace frontend",
    "dev:backend": "npm run start:dev --workspace backend",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm run build --workspace frontend",
    "build:backend": "npm run build --workspace backend",
    "build": "npm run build:frontend && npm run build:backend",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "format": "prettier --write .",
    "test": "jest",
    "validate": "node scripts/validate.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.2",
    "ajv": "^8.17.1",
    "ajv-cli": "^0.6.0",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "tailwindcss": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
